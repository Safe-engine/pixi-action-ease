{
  "compilerOptions": {
    "lib": ["ES2020", "dom"],
    "outDir": "dist",
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false
  },
  "exclude": ["node_modules", "dist"]
}
